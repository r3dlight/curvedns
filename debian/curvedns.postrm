#!/bin/sh -e
set -e

if [ x"$1" = "xpurge" ]; then
  deluser curvedns || true
  deluser curvednslog || true
  rm -rf /var/log/curvedns /etc/curvedns
  if [ -e /usr/share/debconf/confmodule ]; then
    # Source debconf library.
    . /usr/share/debconf/confmodule
    # Remove my changes to the db.
    db_purge
   fi
fi

